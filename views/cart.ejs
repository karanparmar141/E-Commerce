<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cart</title>
    <style>
        #ui {
            display: grid;
            grid-template-columns: repeat(4 , 1fr);
        }
        #ui div img{
            width: 250px;
            height: 250px;
        }
    </style>
</head>
<body>
    <%- include("navbar") %>
    <div id="ui"></div>
</body>
<script>
    fetch("/product/cartdata")
    .then((res) => res.json())
    .then((data) => {
        data.map((element) => {
            let ele = element.productId
            let img = document.createElement("img")
            img.src = ele.img
            let title = document.createElement("h2")
            title.innerHTML = ele.title
            let price = document.createElement("h4")
            price.innerHTML = ele.price
            let des = document.createElement("p")
            des.innerHTML = ele.des
            let btn1 = document.createElement("button")
            btn1.innerHTML = "+"
            let qty = document.createElement("a")
            qty.innerHTML = element.qty
            let btn2 = document.createElement("button")
            btn2.innerHTML = "-"
            let div = document.createElement("div")
            div.append(img , title , price , des , btn1 , qty , btn2)
            document.getElementById("ui").append(div)
        })
    })
    .catch((err) => console.log(err))
</script>
</html>